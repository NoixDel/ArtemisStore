<!-- winoffice.ejs -->
<%- include('partials/headers', {page_title: "Windows et Office"}) %>

<style>
    body {
        background-color: #eef2f7;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 30px 15px;
    }

    h2 {
        text-align: center;
        font-weight: 600;
        color: #333;
        margin-bottom: 30px;
    }

    .logo-container {
        text-align: center;
        margin-bottom: 25px;
    }

    .logo-container img {
        max-width: 150px;
    }

    .info-container, .action-container, .advanced-container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
    }

    .info-container p {
        font-size: 1rem;
        color: #555;
        margin-bottom: 12px;
    }

    .action-container h4,
    .advanced-container h4 {
        font-size: 1.2rem;
        font-weight: 600;
        color: #444;
        margin-bottom: 15px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .btn-primary {
        background-color: #0078d4;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #005fa3;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-advanced {
        background-color: #f8f9fa;
        color: #333;
        margin: 5px 0;
        width: 100%;
        border: 1px solid #ccc;
    }

    .btn:disabled {
        background-color: #ccc;
        cursor: not-allowed;
    }

    select.form-select {
        padding: 8px 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .action-row {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        flex-wrap: wrap;
    }

    .action-box {
        flex: 1 1 45%;
        min-width: 250px;
    }

    #global-refresh {
        text-align: center;
        margin-bottom: 30px;
    }

    @media (max-width: 600px) {
        .action-row {
            flex-direction: column;
        }

        .action-box {
            width: 100%;
        }

        select.form-select {
            width: 100%;
        }
    }
</style>

<div id="global-refresh">
    <button class="btn btn-primary" id="refresh-info">üîÑ Actualiser les informations</button>
</div>

<h2>Informations Windows</h2>
<div class="logo-container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e6/Windows_11_logo.svg/799px-Windows_11_logo.svg.png" alt="Logo Windows">
</div>
<div class="info-container" id="win-office-info">
    <p>R√©cup√©ration des informations... Cela peut prendre jusqu'√† 30 secondes.</p>
</div>

<div class="action-container">
    <div class="action-row">
        <div class="action-box">
            <h4>Changer la version de Windows</h4>
            <div class="d-flex">
                <select class="form-select" id="change-version">
                    <option selected>Choisir une version</option>
                    <option value="home">Windows Home</option>
                    <option value="pro">Windows Pro</option>
                    <option value="enterprise">Windows Enterprise</option>
                </select>
                <button class="btn btn-success" id="apply-version" disabled>Appliquer</button>
            </div>
        </div>
        <div class="action-box text-center">
            <h4>Activer Windows</h4>
            <button class="btn btn-primary" id="activate-windows" disabled>Activer Windows</button>
        </div>
    </div>
</div>

<h2>Informations Microsoft Office</h2>
<div class="logo-container">
    <img src="https://msftstories.thesourcemediaassets.com/sites/113/2016/02/PreviewImage-768x354.png" alt="Logo Office">
</div>
<div class="info-container" id="office-info">
    <p>R√©cup√©ration des informations... Cela peut prendre jusqu'√† 30 secondes.</p>
</div>

<div class="action-container">
    <div class="action-row">
        <div class="action-box text-center">
            <h4>T√©l√©charger Microsoft Office</h4>
            <button class="btn btn-primary" id="download-office" disabled>T√©l√©charger Office</button>
        </div>
        <div class="action-box text-center">
            <h4>Activer Microsoft Office</h4>
            <button class="btn btn-success" id="activate-office" disabled>Activer Office</button>
        </div>
    </div>
</div>

<div class="advanced-container">
    <h4>Options avanc√©es</h4>
    <p style="color: #a94442;"><strong>‚ö†Ô∏è Attention :</strong> Ces actions peuvent modifier ou casser les licences de votre syst√®me. √Ä utiliser uniquement si vous savez ce que vous faites.</p>
    <div id="advanced-buttons"></div>
</div>

<script>
    function renderInfo(data) {
        if (!data) return;

        const win = document.getElementById("win-office-info");
        const office = document.getElementById("office-info");

        if (!data.osName) return;

        win.innerHTML = `
            <p><strong>Nom du syst√®me :</strong> ${data.osName}</p>
            <p><strong>√âdition de Windows :</strong> ${data.windowsEditionId}</p>
            <p><strong>Version de Windows :</strong> ${data.osDisplayVersion}</p>
            <p><strong>Architecture du syst√®me :</strong> ${data.osVersion}</p>
            <p><strong>Activation de Windows :</strong>
                <span style="color: ${data.osActivationStatus ? 'green' : 'red'};">
                    ${data.osActivationType} ${data.osActivationStatus ? '‚úÖ' : '‚ùå'}
                </span>
            </p>
        `;

        if (data.officeInstalled) {
            office.innerHTML = `
                <p><strong>Version d‚ÄôOffice :</strong> ${data.officeVersion}</p>
                <p><strong>Activation d‚ÄôOffice :</strong>
                    <span style="color: ${data.officeActivated ? 'green' : 'red'};">
                        ${data.officeActivated ? 'Activ√© ‚úÖ' : 'Non activ√© ‚ùå'}
                    </span>
                </p>
                <p><strong>Applications install√©es :</strong> ${data.officeApps.join(', ')}</p>
            `;

            if (Array.isArray(data.officeLicenses)) {
                office.innerHTML += '<h4 style="margin-top: 20px;">D√©tails des licences Microsoft 365</h4>';
                data.officeLicenses.forEach(lic => {
                    office.innerHTML += `
                        <div style="border-top: 1px solid #ccc; padding-top: 10px; margin-top: 10px;">
                            <p><strong>Produit :</strong> ${lic.Product}</p>
                            <p><strong>Type de licence :</strong> ${lic.LicenseType}</p>
                            <p><strong>Tenant ID :</strong> ${lic.TenantId}</p>
                            ${lic.NotAfter ? `<p><strong>Expire le :</strong> ${new Date(lic.NotAfter).toLocaleString('fr-FR')}</p>` : ''}
                            ${lic.NextRenewal ? `<p><strong>Renouvellement pr√©vu le :</strong> ${new Date(lic.NextRenewal).toLocaleString('fr-FR')}</p>` : ''}
                            ${lic.EntitlementStatus ? `<p><strong>Statut :</strong> ${lic.EntitlementStatus}</p>` : ''}
                        </div>
                    `;
                });
            }
        } else {
            office.innerHTML = `<p>Office n‚Äôest pas install√© ou les informations sont indisponibles.</p>`;
        }

        document.querySelectorAll('.btn').forEach(btn => btn.disabled = false);
    }

    document.addEventListener("DOMContentLoaded", function () {
        window.electron.on('win-office-info', (data) => {
            if (data) renderInfo(data);
        });

        document.getElementById("refresh-info").addEventListener("click", function () {
            document.getElementById("win-office-info").innerHTML = '<p>R√©cup√©ration des informations... Cela peut prendre jusqu\'√† 30 secondes.</p>';
            document.getElementById("office-info").innerHTML = '<p>R√©cup√©ration des informations... Cela peut prendre jusqu\'√† 30 secondes.</p>';
            document.querySelectorAll('.btn').forEach(btn => btn.disabled = true);
            window.electron.send('refresh-win-office-info');
        });

        document.getElementById("activate-windows").addEventListener("click", function () {
            alert("Bouton d'activation de Windows cliqu√©");
        });

        document.getElementById("apply-version").addEventListener("click", function () {
            const selectedVersion = document.getElementById("change-version").value;
            if (selectedVersion !== "Choisir une version") {
                alert("Changement de Windows vers " + selectedVersion);
            }
        });

        document.getElementById("download-office").addEventListener("click", function () {
            window.electron.send("download-office");
        });

        window.electron.on("office-download-progress", (msg) => {
            document.getElementById("office-info").innerHTML = `<p>${msg}</p>`;
        });

        window.electron.on("office-download-complete", (msg) => {
            document.getElementById("office-info").innerHTML = `<p>${msg}</p>`;
        });

        document.getElementById("activate-office").addEventListener("click", () => {
            document.getElementById("office-info").innerHTML = `<p>‚è≥ Activation de Microsoft Office en cours...</p>`;
            window.electron.send("activate-office");
        });

        window.electron.on("office-activation-status", (msg) => {
            document.getElementById("office-info").innerHTML = `<p>${msg}</p>`;
        });


        // Injecter les boutons avanc√©s
        const advancedButtons = [
            "Check_Activation_Status",
            "Change_Office_Edition",
            "Change_Windows_Edition",
            "Extract_OEM_Folder",
            "HWID_Activation",
            "KMS38_Activation",
            "Ohook_Activation_AIO",
            "Online_KMS_Activation",
            "TSforge_Activation",
            "MAS_AIO"
        ];

        const container = document.getElementById("advanced-buttons");
        advancedButtons.forEach(name => {
            const btn = document.createElement("button");
            btn.textContent = `D√©marrer ${name}.cmd`;
            btn.className = "btn btn-advanced";
            btn.onclick = () => window.electron.send("start-script", `${name}.cmd`);
            container.appendChild(btn);
        });
    });
</script>

<%- include('partials/footers') %>
